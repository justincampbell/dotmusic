#!/usr/bin/env sh

set -e

OPTIND=1

show=false
write=true

while getopts "p" opt; do
  case "$opt" in
    p)
      show=true
      write=false
      ;;
  esac
done

shift $((OPTIND-1))

if [ $write = "true" ] && ! git status > /dev/null 2>&1; then
  exit 0
fi

providers="itunes spotify rdio"

for provider in $providers; do
  command="dotmusic-$provider"

  if command -v $command > /dev/null 2>&1; then
    artist=$($command)

    if [ -n "$artist" ]; then
      break
    fi
  fi
done

if [ -z "$artist" ]; then
  exit 0
fi

if [ $show = "true" ]; then
  echo $artist
fi

if [ $write = "false" ]; then
  exit 0
fi

musicfile=$(git rev-parse --show-toplevel)/.music

if [ ! -f $musicfile ]; then
  touch $musicfile
fi

if ! grep -iqx "$artist" $musicfile; then
  echo $artist >> $musicfile
fi
